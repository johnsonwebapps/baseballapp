<%= form_for @player, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :surname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :surname, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :givenname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :givenname, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :games, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :games, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :atbats, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :atbats, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :runs, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :runs, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hits, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :hits, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rbi, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :rbi, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pb, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :pb, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :walks, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :walks, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :struckout, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :struckout, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hitbypitch, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :hitbypitch, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                players_path, :class => 'btn' %>
  </div>
<% end %>
